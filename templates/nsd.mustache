# OWNS
# Serve local zones
server:
{{#addresses}}
  ip-address: {{address}}
{{/addresses}}
{{#addresses6}}
  ip-address: {{address6}}
{{/addresses6}}
{{#username}}
  username: {{username}}
{{/username}}
{{#hostname}}
  identity: {{hostname}}
{{/hostname}}
{{#port}}
  port: {{port}}
{{/port}}
  verbosity: 1

{{#nsd4}}
remote-control:
  control-enable: yes
{{/nsd4}}

{{! Recorrer todas las zonas }}
{{#zones}}
{{! El secreto de esta zona }}
key:
  name: "{{zone}}.key"
  algorithm: hmac-sha1
  secret: "{{secret}}"

{{! Secci칩n de la zona }}
zone:
{{! Nombre y archivo }}
  name: "{{zone}}"
  zonefile: "zones/{{zone}}.zone"
{{! Definici칩n de delegados, somos la autoridad de esta zona }}
{{#delegates}}

{{! Notificar a las direcciones de los delegados }}
  notify: {{delegate_address}}@{{delegate_port}} {{zone}}.key
{{! Si no hay una subnet, habilitar las direcciones individuales de cada
    delegado }}
  {{^delegate_subnet}}
  provide-xfr: {{delegate_address}} {{zone}}.key
  {{/delegate_subnet}}
{{/delegates}}
{{! Si hay una subnet, habilitar a todos los delegados que tengan la
    llave de esta zona }}
{{#delegate_subnet}}
  provide-xfr: {{subnet}} {{zone}}.key
{{/delegate_subnet}}

{{! Secci칩n de autoridades
    Si esto est치 completo quiere decir que somos delegados }}
{{#authorities}}
  allow-notify: {{authoritative_address}} {{zone}}.key
  request-xfr: AXFR {{authoritative_address}}@{{authoritative_port}} {{zone}}.key
{{/authorities}}

{{/zones}}
