_lvpn._udp.{{domain}}. IN PTR {{domain}}.
_lvpn._udp.{{domain}}. IN SRV 0 0 {{tinc_port}} {{domain}}.
_lvpn._udp.{{domain}}. IN TXT {{base64_host_file}}
{{/lvpn}}
