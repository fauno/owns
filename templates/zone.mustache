$ORIGIN {{domain}}.
$TTL 1h

{{domain}}. IN SOA {{ns}}. {{domain}}. (
                    2013042816
                    1h
                    2h
                    1d
                    1h
                    )

; dominios públicos de los NS esclavos
{{domain}}. IN NS {{ns1}}.
{{domain}}. IN NS {{ns2}}.

; IP dinámica
{{domain}}. IN A     {{public_address}}
{{#public_address6}}
{{domain}}. IN AAAA  {{public_address6}}
{{/public_address6}}

